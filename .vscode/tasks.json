{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Compiler Backend",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/*.cpp",
                "-Iinclude",
                "-o",
                "build/compiler"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile all cpp files and output executable in build/"
        },
        {
            "label": "Run Compiler Backend",
            "type": "shell",
            "command": "./build/compiler",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
